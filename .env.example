# TalkCart Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/talkcart

# JWT Security
JWT_SECRET=your-jwt-secret-key-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production

# Stripe Payment Integration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Flutterwave Payment Integration (Mobile Money)
FLW_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
NEXT_PUBLIC_FLW_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# Cloudinary Media Storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Admin Configuration
ADMIN_SIGNUP_KEY=talkcart-admin-2024

# Email Configuration (Optional)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Socket.IO Configuration
SOCKET_ORIGINS=http://localhost:3000,http://localhost:4000

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
COOKIE_SECRET=your-cookie-secret-key

# API Keys for External Services
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Blockchain/Web3 Configuration (Optional)
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Mobile Money Specific Configuration
# Supported currencies: RWF, USD, EUR, KES, UGX, TZS, SOS
FLW_SUPPORTED_CURRENCIES=USD,UGX,RWF,KES,TZS

# Webhook Configuration
FLW_SECRET_HASH=your_flutterwave_webhook_secret_hash

# Testing Configuration
TEST_MODE=true
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123