{
  "name": "talkcart-frontend",
  "version": "1.0.0",
  "description": "TalkCart Frontend - Modern Web3 Super Application",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "dev:turbo": "next dev -p 4000 --turbo",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "lint:fix": "node ../node_modules/next/dist/bin/next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "node -e \"try{require('fs').rmSync('.next',{recursive:true,force:true})}catch(e){};try{require('fs').rmSync('out',{recursive:true,force:true})}catch(e){};try{require('fs').rmSync('node_modules',{recursive:true,force:true})}catch(e){}\"",
    "clean:next": "node -e \"try{require('fs').rmSync('.next',{recursive:true,force:true})}catch(e){}\"",
    "dev:clean": "npm run clean:next && npm run dev",
    "fix-permissions": "powershell -ExecutionPolicy Bypass -File fix-permissions.ps1"
  },
  "dependencies": {
    "@cloudinary/react": "^1.14.3",
    "@cloudinary/url-gen": "^1.21.0",
    "@dnd-kit/core": "^6.0.8",
